<UserControl
    x:Class="AppStudio.Uwp.Samples.About"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid
        Background="Black">
        <ScrollViewer
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <RichTextBlock
                    Margin="12"
                    TextWrapping="Wrap"
                    Foreground="Black">
                    <Paragraph>
                        <Run

                            FontSize="17"

                            FontWeight="SemiBold"

                            Text="{Binding AppName}"/>

                    </Paragraph>

                    <Paragraph>

                        <Run

                            FontSize="12"

                            Text="{Binding Publisher}"/>

                    </Paragraph>

                    <Paragraph

                        FontSize="12">

                        <Run

                            Text="{Binding Version}"/>

                    </Paragraph>

                    <Paragraph

                        Margin="0,12,0,0">

                        <Run

                            x:Uid="About_Info"

                            FontWeight="Light"

                            FontSize="14" />

                    </Paragraph>

                    <!--App Code-->

                    <Paragraph

                        Margin="0,24,0,0">

                        <Run

                            x:Uid="About_AppCode"

                            FontWeight="SemiBold"

                            FontSize="17"/>

                    </Paragraph>                   
                    <Paragraph

                        Margin="0,24,0,0">

                        <Run

                            x:Uid="About_Dependencies"

                            FontWeight="SemiBold"

                            FontSize="17"/>

                    </Paragraph>

                    <Paragraph
         
                        Margin="12,6,0,0">

                        <Hyperlink

                            FontWeight="Light"

                            Foreground="White"

                            NavigateUri="https://github.com/ST-Apps/PoGo-UWP/blob/master/README.md"

                            FontSize="12">

                            First  README
                        </Hyperlink>
                    </Paragraph>
                    <Paragraph
                        Margin="12,6,0,0">
                        <Hyperlink
                            FontWeight="Light"
                            Foreground="White"
                            NavigateUri="https://club.pokemon.com/fr/club-des-dresseurs-pokemon/inscription/"
                            FontSize="12">
                            How to create a PTC ?
                        </Hyperlink>
                    </Paragraph>
                </RichTextBlock>
                <Grid
                    Background="#7a7a7c"
                    Margin="0,0,0,48">
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="12,0">
                        <RichTextBlock
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White">
                        </RichTextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
